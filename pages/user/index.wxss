.user-header {
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #4294f7;
  margin-bottom: .5rem;
}

.container {
  background-color: #eee;
}

.user-poster {
  width: 100%;
  height: 53vw;
  display: block;
}

.user-links {
  padding: 15px 0;
  font-size: 12px;
  text-align: center;
  background-color: #fff;
  margin-bottom: .5rem;
  display: block;
}

.user-links .van-icon {
  display: block;
  font-size: 24px;
}

.user-links .van-row {
  padding: 15px 0;
}